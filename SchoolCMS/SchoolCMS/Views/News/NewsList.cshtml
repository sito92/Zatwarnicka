@model IEnumerable<SchoolCMS.Models.News>

@{
    ViewBag.Title = "NewsList";
}

<h2>NewsList</h2>

<p>
    @Html.ActionLink("Create New","NewsAdd","News")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AuthorId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AuthorId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "NewsEdit","News",new { newsId=item.Id },null ) |
            @Html.ActionLink("Usuń", "NewsDelete","News", new { newsId=item.Id },null)
        </td>
    </tr>
}

</table>
