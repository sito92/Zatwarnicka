@model SchoolCMS.ViewModels.MenuButtonPage

@{
    ViewBag.Title = "Dodaj przycisk menu";
}

<h2>Dodaj</h2>

@using (Html.BeginForm("Add","MenuButton",FormMethod.Post)) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(x=>x.MenuButton.IsRootButton)
    @Html.HiddenFor(x=>x.MenuButton.ParentId)
    @Html.HiddenFor(x => x.MenuButton.Level)
    <fieldset>
        <legend>Przycisk menu</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.MenuButton.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MenuButton.Name)
            @Html.ValidationMessageFor(model => model.MenuButton.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Pages)
        </div>
        <div>
            @Html.DropDownListFor(model => model.SelectedPage, Model.Pages)
            @Html.HiddenFor(model => model.MenuButton.Id)
        </div>

        <p>
            <input type="submit" value="Dodaj" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Powrót do listy przycisków menu", "List","MenuButton")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
