@model SchoolCMS.Models.MenuButton

@{
    ViewBag.Title = "Edycja przycisku menu";
}

<h2>Edytuj</h2>

@using (Html.BeginForm("Edit","MenuButton",FormMethod.Post)) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Przycisk menu</legend>

        @Html.HiddenFor(x => x.IsRootButton)
        @Html.HiddenFor(x => x.Id)
        @Html.HiddenFor(x => x.ParentId)
        @Html.HiddenFor(x => x.Level)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.InformationSourceId)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.InformationSourceId, (SelectList)ViewBag.Pages)
            @Html.ValidationMessageFor(model => model.InformationSourceId)
        </div>

        <p>
            <input type="submit" value="Zapisz" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Powrót do listy przycisków", "List","MenuButton")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
