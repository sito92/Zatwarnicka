@model SchoolCMS.Models.MenuButton

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>MenuButton</legend>

        @Html.HiddenFor(x => x.IsRootButton)
        @Html.HiddenFor(x => x.Id)
        @Html.HiddenFor(x => x.ParentId)
        @Html.HiddenFor(x => x.Level)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PageId)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model=>model.PageId,(SelectList)ViewBag.Pages)
            @Html.ValidationMessageFor(model => model.PageId)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
