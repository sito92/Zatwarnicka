@model System.Collections.Generic.IEnumerable<SchoolCMS.Models.MenuButton>

@{
    ViewBag.Title = "Gałąź przycisków menu";
}

<h2>Gałąź</h2>


@foreach (var item in Model) {

    for (int i = 0; i <item.Level; i++)
    {
        if (i==item.Level-1)
        {
            <div id="arrow"></div>
        }
        else
        {
            <div id="levelEscape"></div>
        }
    }
    <div id="editButtonContainer">
        <div id="editButton">
            @Html.DisplayFor(modelItem => item.Name)
        </div>
        @Html.ActionLink("Edytuj", "Edit", new { menuButtonId = item.Id })
        @Html.ActionLink("Usuń", "Delete", new { menuButtonId = item.Id })
        @Html.ActionLink("Dodaj przycisk menu", "Add", new { id = item.Id })
    </div>  
}

