@model System.Collections.Generic.IEnumerable<SchoolCMS.Models.MenuButton>

@{
    ViewBag.Title = "Lista przycisków menu";
}

<h2>Lista</h2>

<p>
    @Html.ActionLink("Stwórz nową gałąź", "NewBranch")
</p>
<div class="CSSTableGenerator">
    <table>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edytuj", "Branch", new { menuButtonId = item.Id })
                    @Html.ActionLink("Usuń", "Delete", new { menuButtonId = item.Id })
                </td>
            </tr>
        }

    </table>
</div>