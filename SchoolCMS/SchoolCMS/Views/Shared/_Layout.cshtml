@using System
@using System.Linq
@using System.Web.Caching
@using SchoolCMS.Helpers
@using SchoolCMS.Models
@using SchoolCMS.ViewModels
@{
    var Model = (CmsViewModel)ViewBag.Settings;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - @Model.CmsSettings.SchoolName</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />

    <link href="@Model.CmsSettings.Layout.Path" rel="stylesheet" />
    
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")



</head>
<body>
    
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">@Html.ActionLink(@Model.CmsSettings.SchoolName, "Index", "Home")</p>
            </div>



            <div class="float-right">
                        <ul id="nav">
                            @Html.ButtonList(Model.MenuButtons, "cos")
                        </ul>

                        <section id="login">
                            @Html.Partial("_LoginPartial")
                        </section>

            </div>
        </div>
    </header>
<div id="body">
    @RenderSection("featured", required: false)
    @Html.Partial("_EditorsNavigation")
    <section class="content-wrapper main-content clear-fix">
        @RenderBody()
    </section>
</div>
<div>
    @using (Html.BeginForm("Filter", "Filter"))
    {
        @Html.TextBox("Tag")
    <p>
        <input type="submit" value="Wyszukaj" />
    </p>
    }
</div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - @Model.CmsSettings.SchoolName</p>
            </div>
        </div>
    </footer>


    @RenderSection("scripts", required: false)
</body>
</html>
