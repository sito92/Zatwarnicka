@model System.Collections.Generic.IEnumerable<SchoolCMS.Models.Page>

@{
    ViewBag.Title = "Lista stron";
}

<h2>Lista</h2>

<p>
    @Html.ActionLink("Dodaj stronę", "Create")
</p>
<div class="CSSTableGenerator">
    <table>
        <tr>
            <th>
            @Html.DisplayName("Autor")
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Author.Name) @Html.DisplayFor(modelItem => item.Author.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @Html.ActionLink("Edytuj", "Edit", new {id = item.Id}) |
                    @Html.ActionLink("Usuń", "Delete", new {id = item.Id})
                </td>
            </tr>
        }

    </table>
</div>